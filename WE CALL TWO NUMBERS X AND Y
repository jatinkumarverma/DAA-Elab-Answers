#include <bits/stdc++.h>
using namespace std;
int i,k,m,n,t,a[60];
int main()
{
 scanf("%d",&t);
while(t!=0) {
 cin>>n;
 for(i=k=m=0;i<n;i++)
 {
 cin>>a[i];
 if(a[i]&1)m++;
 }
 sort(a,a+n);
 for(i=0;++i<n;)
 {
 if(a[i]-a[i-1]==1)k++;
 }
 if(m&1&&!k)cout<<"NO"<<endl;
 else cout<<"YES"<<endl;
 t--;
 }
 return 0;
 cout<<"int t,n,q,i,j,w,a[55],b[55];";
}
